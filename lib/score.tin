#nop -- Generate a score block with "proper" colors
#func scoreBlock {

  #var result {<078>[ <028>%1:};

  #format {_test} {%L} {%1};
  #math {_keylen} { 14 - $_test};
  #format {result} {$result<058>%+${_keylen}s<078> ]} {%2}
}



